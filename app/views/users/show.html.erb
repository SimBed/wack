<% provide(:title, @user.name) %>
<div class="flex-container">
  <div class="flex-grow-1">
    <%= gravatar_for @user %>
  </div>
  <div style="flex-grow: 8" class ="bg-dark pl-2">
    <h4 class="WorkoutName-s">
      <%= @user.name.upcase %>
    </h4>
    <div class="user-profile">
      <div class="user-date"><%= date_reformat @user.activated_at %></div>
      <div class="user-rank">Wack Newbie</div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mb-6">
  <div class="bigcircle mr-5">
    <%= @attempts.count %>
    <div class="user_score">LIFETIME WACKS</div>
  </div>

  <!--very hacky to get the names on 2 lines (not 1 or 3) -->
  <div class="bigcircle">
    <%= @attslw.count %><div class="user_score">WACKS LAST<span class="pl-1">WEEK</span></div>
  </div>
  <div class="bigcircle ml-5">
    ??<div class="user_score">WACK SCORE</div>
  </div>
</div>

<div class="accordion" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        Reiews (<%= @user.microposts.count %>)
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div class = "container mt-3">
          <% if @user.microposts.any? %>
            <ol class="microposts">
              <%= render @microposts, setting: "usernameno" %>
            </ol>
            <%== pagy_nav @pagy %>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
        Wacks (<%= @user.attempts.count %>)
      </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div class = "container mt-3">
          <% if @user.microposts.any? %>
            <ol class="microposts">
              <%= render @microposts, setting: "usernameno" %>
            </ol>
            <%== pagy_nav @pagy %>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
